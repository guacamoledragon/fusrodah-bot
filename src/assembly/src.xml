<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>release</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>dir</format>
  </formats>
  <files>
    <file>
      <source>${project.basedir}/src/assembly/start.bat</source>
      <lineEnding>windows</lineEnding>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${project.basedir}/src/assembly/start.sh</source>
      <lineEnding>unix</lineEnding>
      <fileMode>755</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${project.basedir}/src/assembly/docker-compose.yml</source>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${project.basedir}/src/assembly/.env</source>
      <filtered>false</filtered>
    </file>
    <file>
      <source>${project.basedir}/src/assembly/settings.db</source>
      <filtered>false</filtered>
    </file>
    <file>
      <source>LICENSE</source>
    </file>
    <file>
      <source>${project.basedir}/target/${artifactId}-${project.version}.${packaging}</source>
      <outputDirectory>./</outputDirectory>
      <destName>${artifactId}-${version}.jar</destName>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/html</directory>
      <outputDirectory>./</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>./lib</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>
